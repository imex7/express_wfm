<h2>Orders</h2>

{{#if orders.length}}
	{{#each orders}}
	<div class="row">
		<div class="col s6 offset-s3">
			<div class="card">
				<div class="card-content">
					<span class="card-title">
						Заказ
					</span>
					<p class="date">Дата: {{date}}</p>
					<p>Пользователь: <em>{{user.name}}</em></p>
					<ul>
						{{#each items}}
							<li>{{itemId.title}}, количество: {{count}}</li>
						{{/each}}
					</ul>
					<hr>
					<p>
						Цена: <span class="price">{{price}}</span>
					</p>
				</div>
			</div>
		</div>
	</div>
	{{/each}}
{{else}}
	<p>Заказов нет</p>
{{/if}}