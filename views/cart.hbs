<h1>{{title}}</h1>

<div id="cart">
{{#if items.length}}
	<table>
		<thead>
			<tr>
				<th>Название</th>
				<th>Количество</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each items}}
				<tr>
					<td>{{title}}</td>
					<td>{{count}}</td>
					<td>
						<button class="btn btn-small remove" data-id="{{id}}">Удалить</button>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<p>Общая стоимость:</p>
	<p class="price">{{price_total}}</p>
{{else}}
	<p>Корзина пуста</p>
{{/if}}
</div>